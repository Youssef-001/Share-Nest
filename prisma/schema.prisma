generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String     // MediumText may be needed for MySql
  expiresAt   DateTime
}
 

model users {
  id Int @id @default(autoincrement())
  username String 
  email String @unique
  password String
  folders folder[]
}


model file {
  id Int @id @default(autoincrement())
  name String 
  size Float
  extention String
  url String
  folder folder @relation(fields: [folderId], references: [id])
  folderId Int
  Date DateTime @default(now())

  @@index(name)

}

model folder {
    id Int @id  @default(autoincrement())
    name String @default("New Folder")
    owner users @relation(fields: [ownerId], references: [id])
    ownerId Int
    files file[]

}

