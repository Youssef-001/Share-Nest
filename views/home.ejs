<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<style>
    svg{
        width: 3rem;
        height: 3rem;
        color:black;
    }

    input[type="file"] {
  display: none;
}

.container{
    margin-left: 3rem;

}

.custom-file-upload {
  border: 1px solid #ccc;
  display: inline-block;
  padding: 6px 12px;
  cursor: pointer;
  padding-right: 4rem;
  border: 1px solid teal;
}
.container1{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

}


.container2{
    display: flex;
    /* justify-content: center; */
    align-items: center;
    flex-direction: column;

}

.empty{
    display:flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
}

form{
    display:flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.container1 svg {
    width: 12rem;
    height: 12rem;
    color: grey;
    border: transparent;

}

.container1 {
    color: #2D3748;
}
.container1,.container2 label {
    border: none;
    
}

.container2{
    color: #2D3748;
}

li{
    color: #2D3748;
}



/* Base Style */
.upload-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12px 24px;
  background-color: #48BB78; /* Green */
  color: #FFFFFF; /* White text */
  font-size: 16px;
  font-weight: 600;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
}

.upload-button:hover {
  background-color: #38B2AC; /* Teal hover effect */
}

.upload-button:focus {
  outline: none;
  box-shadow: 0 0 0 3px #38B2AC; /* Focus effect with teal border */
}

/* Upload Icon (Optional) */
.upload-button .icon {
  margin-right: 8px;
  font-size: 18px; /* Size of the icon */
}

/* Disabled state */
.upload-button:disabled {
  background-color: #E2E8F0; /* Light gray background for disabled */
  color: #A0AEC0; /* Lighter text for disabled */
  cursor: not-allowed;
  box-shadow: none; /* No shadow when disabled */
}


.file{
    display:grid;
    grid-template-columns: 2fr 1fr 1fr 2fr;
    gap: 1rem;


}


main{
    display:grid;

    grid-template-rows: auto auto 1fr;
    gap: 2rem;

}

#search{
    padding: 1rem;
    /* width: 80%; */
    justify-content: center;
    align-items: center;
    border-radius: 12px;
    border: 1px solid grey;
    width: 70vw;
    font-size: 1.3rem;

}
.search{
    display:flex;
    justify-content: center;
    align-items: center;
    margin-top: 2rem;
    grid-row: 1/2;
}

.controls{
    grid-row: 2/3;
    display:flex;
    justify-content: center;
    gap: 2rem
}

dialog {
position: absolute;
top: 40%;
left: 50%;
}



#search:focus{
    border: 1px solid blue;
}

#create-folder{
    display:flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding:1rem 1rem;
    padding-right: 3rem;
    /* all:unset; */
    cursor: pointer;
    border: 1px solid grey;
    background-color: transparent;
}


</style>


<body>


    <main>
        <div class="search">
            <form action="/">
                <input type="search" placeholder="üîç Search" name="search" id="search">
                
            </form>
        </div>

    </div>

        
            <div class="container2">
            <p>You have the following files:</p>
            <div class="files">
                <% files.forEach(function(file) { %>
                    <!-- <li><%= file.name %> - <%= file.size %> bytes</li> -->
                     <div class="file">
                        <p><%=file.name%></p>
                        <p><%=file.extention%></p>
                        <p><%=file.size%> MB</p>
                        <p>Date</p>
                     </div>

                <% }); %>
                </div>

           
        </div>
        
        

    </div>

    <div class="controls">
        <form id="upload" action="/upload" method="post" enctype="multipart/form-data">

        
            <!-- <button class="upload-button" id="uploadButton" aria-label="Upload File">
                <span class="icon">üìÅ</span> Upload
              </button> -->
    
              <div style="display:flex;">
                <label for="file-upload" class="custom-file-upload">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="size-6">
                        <path strokeLinecap="round" strokeLinejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
                      </svg>
                      
                    <h3>Upload</h3>
                </label>
                <input id="file-upload" type="file" name="file" />
    
              </div>
              
        </form>




          <div>
            <dialog>
                <button autofocus>Close</button>
                <p>This modal dialog has a groovy backdrop!</p>
              </dialog>
              <button id="create-folder">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="size-6">
                    <path strokeLinecap="round" strokeLinejoin="round" d="M12 10.5v6m3-3H9m4.06-7.19-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
                  </svg>
    
                  <div>
                    Create folder
                  </div>
                  
              </button>
          </div>
          

    </div>

   



    </main>

      
</body>
<script>
    document.getElementById('file-upload').addEventListener('change', function () {
      // Get the form element
      const form = document.getElementById('upload');
      
      // Submit the form automatically
      form.submit();
    });
  </script>



<script>
    const dialog = document.querySelector("dialog");
const showButton = document.querySelector("dialog + button");
const closeButton = document.querySelector("dialog button");

// "Show the dialog" button opens the dialog modally
showButton.addEventListener("click", () => {
  dialog.showModal();
});

// "Close" button closes the dialog
closeButton.addEventListener("click", () => {
  dialog.close();
});

  </script>
</html>